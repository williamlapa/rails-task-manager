<%# CHAMAR O TITLE %>
<div class="container"><h1>Edit Task</h1>
  <h1><%= @task.title %></h1>

  <h2><%= @task.details %></h2>
  <br>
  <% if @task.completed %>
  <h3> ✔  The task is completed!</h2>
  <% else %>
  <h3> ❌ The task is not completed yet</h2>
  <% end %>
  <br>
  <br>
</div>

<div class="container">
<h2><%= link_to "Back to List", '/tasks', class: "btn btn-primary"%></h2>
<h2><%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-primary"%></h2>
</div>
